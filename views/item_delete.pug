extends layout 

block content 
    h1= title 

    p Name: #{item.name}
    p Description: #{item.description}
    p Category: #{category.name}
    p Price: #{item.price}
    p Number in Stock: #{item.number_in_stock}

    p Are you sure you want to delete this item?

    form(method='POST' action='')
        input(type='hidden' name='itemid' required readonly value=item.id)

        button(type='submit') Delete 
        a(href=item.url) Cancel